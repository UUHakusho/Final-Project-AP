<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/restText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/restText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:text="â‹®"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="Weight: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weight">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setCount1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="8dp"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="5"
                android:backgroundTint="@color/material_dynamic_neutral80"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weight" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setCount2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="8dp"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="5"
                android:backgroundTint="@color/material_dynamic_neutral80"
                app:layout_constraintStart_toEndOf="@id/setCount1"
                app:layout_constraintTop_toBottomOf="@id/weight" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setCount3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="8dp"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="5"
                android:backgroundTint="@color/material_dynamic_neutral80"
                app:layout_constraintStart_toEndOf="@id/setCount2"
                app:layout_constraintTop_toBottomOf="@id/weight" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setCount4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="8dp"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="5"
                android:backgroundTint="@color/material_dynamic_neutral80"
                app:layout_constraintStart_toEndOf="@id/setCount3"
                app:layout_constraintTop_toBottomOf="@id/weight" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setCount5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="8dp"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="5"
                android:backgroundTint="@color/material_dynamic_neutral80"
                app:layout_constraintStart_toEndOf="@id/setCount4"
                app:layout_constraintTop_toBottomOf="@id/weight" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
